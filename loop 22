#include <stdio.h>
#include <math.h>
int main() {
    int n, temp, digit, count = 0;
    int sum = 0;
    printf("Enter a number: ");
    scanf("%d", &n);
    temp = n;
    while (temp != 0) {
        count++;
        temp = temp / 10;
    }
    temp = n;
    for (; temp != 0; temp = temp / 10) {
        digit = temp % 10;
        sum = sum + pow(digit, count);
    }
    if (sum == n)
        printf("%d is an Armstrong number", n);
    else
        printf("%d is NOT an Armstrong number", n);
    return 0;
}
